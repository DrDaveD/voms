load_lib vomstest.exp

testheader "See if voms-proxy-destroy --file works."
_activateCert mycert2

_vomsStart voms1
set outname [exec mktemp $::SCRATCHDIR/voms-proxy-init-XXXXXX]
set res [catch {set out [exec $::INSTALLDIR/bin/voms-proxy-init --out=$::SCRATCHDIR/proxy --voms voms1 >& $outname]}]
_vomsStop voms1

if $res then {
    set LOGOUTS "$LOGOUTS $outname"
    fail "voms-proxy-init failed."
} else {
    set outname [exec mktemp $::SCRATCHDIR/voms-proxy-info-XXXXXX]
    set res [catch {set out [exec $::INSTALLDIR/bin/voms-proxy-destroy --file $::SCRATCHDIR/proxy >& $outname]}]

    if $res then {
        set LOGOUTS "$LOGOUTS $outname"
        fail "voms proxy destroy failed."
    } else {
        if [file exists $::SCRATCHDIR/proxy] then {
            fail "proxy exists."
        } else {
            pass "proxy deleted."
        }
    }
}
